@page
@model WebAppLeaflet18_07_2023.Pages.Leaflet_ModelModel
@{
	ViewData["Title"] = "Adding Coordinate";
}

@if (Model.hasData)
{
	<p>Hello, @Model.latitude @Model.longitude</p>
	<p>We received your coordinates successfully:</p>
	<p>@Model.city</p>
}

<head>
	<title>Leaflet Essentials</title>
	<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-9ndCyUaIbzAi2FUVXJi0CjmCapSmO7SnpJef0486qhLnuZ2cdeRhO02iuK6FUUVM" crossorigin="anonymous">
	<link rel="stylesheet" href="https://unpkg.com/leaflet@1.9.4/dist/leaflet.css" />
	<style>
		#map {
			height: 100vh;
			width: 100%;
		}
		/* Style the full-screen button */
		#fullscreenButton {
			position: absolute;
			top: 10px;
			right: 10px;
		}
	</style>
</head>

<body>
	<div>
		<h5>LeafletMap Add Coordinate</h5>
		 <div class="container">
			 <form method="POST">
				<label for="flat">Latitude</label><br>
				<input type="text" id="lat"><br>

				<label for="flon">Longitude</label><br>
				<input type="text" id="lon"><br>

				<label for="cityName">City Name</label><br>
				<textarea id="city" name="city" style="height:200px"></textarea><br>

				<input type="submit" value="Submit"><br>
			 </form>

			 <form>
				 Latitude: <input type = "text" id="latitudeInput" ><br>
				 Longitude: <input type = "text" id="longitudeInput" ><br>
				 <input type="button" value = "Add Marker" onclick = "addMarker()" >
			 </form>
		 </div>

		 <div>
			 <form method="post" enctype="multipart/form-data">
				 <input type = "file" id="fileInput" name="file"/>
				 <input type="submit" value="Upload File" />
			 </form>
		 </div>

	</div>
	<div>
		<button class="bg-primary" id="btn-edit">
			Add
		</button>
	</div>
	<br>
	@*<button id="fullscreenButton">Toggle Full-Screen</button>*@

	<div id="map"></div>
	<script src="https://unpkg.com/leaflet@1.9.4/dist/leaflet.js"></script>
	<script src="~/js/site.js">
	</script>

</body>
