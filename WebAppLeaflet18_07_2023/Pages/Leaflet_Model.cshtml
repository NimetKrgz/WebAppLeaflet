	@*<script src='https://unpkg.com/@turf/turf@6/turf.min.js'></script>*@

</head>

<body>
	<div id="map">
		<button type="button" id="showCheckboxesBtn" class="btn btn-primary panel panel-default" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false" (click)="toggleLayerVisibility()">
				Layers
			</button>
			<div class="btn-group">
				<div class="dropdown-menu" aria-labelledby="showCheckboxesBtn" id="checkboxContainer">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="mahalleCheckbox" checked />
						<label class="form-check-label" for="mahalleCheckbox"> Mahalle </label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="numaratajCheckbox" checked />
						<label class="form-check-label" for="numaratajCheckbox"> Numarataj </label>
					</div>
					<div class="form-check">
						<input class="form-check-input" type="checkbox" id="parselCheckbox" checked />
						<label class="form-check-label" for="parselCheckbox"> Parsel </label>
					</div>
				</div>
			</div>
	</div>

	


