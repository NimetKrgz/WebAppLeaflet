@page
@model WebAppLeaflet18_07_2023.Pages.Leaflet_ModelModel
@{
	ViewData["Title"] = "Adding Coordinate";
}

@if (Model.hasData)
{
	<p>Hello, @Model.latitude @Model.longitude</p>
